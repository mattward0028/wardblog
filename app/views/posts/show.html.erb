<p id="notice"><%= notice %></p>

<div id="post_content">
<h1 class="title">
  <%= @post.title %>
</h1>

<h5 class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
</h5>

<h3 class="body">
  <%= @post.body %>
</h3>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


</div>
