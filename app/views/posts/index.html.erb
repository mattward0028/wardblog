
<div class="newpost">
  <% if signed_in? && current_user.admin? %>
<h2><%= link_to 'New Post', new_post_path %><h2>
  <% end %>
</div>


<% @post.each do |post| %>
  <div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, post %></h2>
    <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
  <div>
<% end %>
<%= will_paginate @post %>
